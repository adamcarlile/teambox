%h2
  = t('.title')
  - if @data.is_processing
    %a{:href => '#'}= t('common.cancel')

- if @data.is_processing
  %p= t('teambox_datas.data.processing')
- else
  %p= t('teambox_datas.data.processed_at', :processed_at => @data.processed_at)

%p= t('.projects')
%ul
  - @data.projects_to_export.each do |project|
    %li= link_to h(project.name), project_path(project)

- unless @data.is_processing
  = link_to t('.download'), @data.processed_data.url
